#include <iostream>
using namespace std;

int main()
{
    int n=8;
    for (int linenum=1; linenum<=n; linenum++){
        for (int starnum=n; starnum>=linenum;starnum--){
            cout<<"*";
        }
       for(int j =0;j<linenum; j++){
           cout<<"0";
       }
        for (int starnum=0; starnum<linenum;starnum++){
            cout<<"0";
        }
       for(int j =n;j>=linenum; j--){
           cout<<"*";
       }
            cout<<endl;
        
    }
    

    return 0;
    /* result is
*********00*********
********0000********
*******000000*******
******00000000******
*****0000000000*****
****000000000000****
***00000000000000***
**0000000000000000**
*000000000000000000*
*/

    /*
